{
  "name": "tracking-ready-hook",
  "version": "0.0.0",
  "description": "Notify when GA and GTM are loaded in your React Component",
  "source": "src/index.js",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "browser": "lib/index.umd.js",
  "scripts": {
    "test": "xo src/*.js && jest",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublish": "npm run build",
    "release": "release-it"
  },
  "files": [
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zanonnicola/tracking-ready-hook.git"
  },
  "keywords": [
    "reactjs",
    "hooks",
    "ga",
    "gtm",
    "js"
  ],
  "xo": {
    "rules": {
      "unicorn/filename-case": 0,
      "import/no-unassigned-import": 0,
      "no-unused-expressions": [
        "error",
        {
          "allowTernary": true
        }
      ],
      "camelcase": 0
    },
    "extends": [
      "xo-react"
    ],
    "envs": [
      "browser",
      "jest",
      "es6"
    ],
    "ignore": [
      "node_modules/*",
      "lib/*"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.{js}"
    ]
  },
  "author": {
    "name": "Nicola Zanon",
    "url": "nicola-zanon.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zanonnicola/tracking-ready-hook/issues"
  },
  "homepage": "https://github.com/zanonnicola/tracking-ready-hook#readme",
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-react": "7.0.0",
    "eslint-config-xo-react": "0.19.0",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.5.1",
    "jest": "24.5.0",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-testing-library": "6.0.0",
    "release-it": "10.3.1",
    "rollup": "1.6.0",
    "rollup-plugin-analyzer": "3.0.0",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "rollup-plugin-terser": "4.0.4",
    "xo": "0.24.0"
  },
  "peerDependencies": {
    "react": "16.8.4",
    "react-dom": "16.8.4"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
